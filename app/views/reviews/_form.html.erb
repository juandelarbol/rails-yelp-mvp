<div class="container my-5">
  <div class="card shadow-sm">
    <div class="card-header bg-success text-white">
      <h3 class="mb-0">Add a Review</h3>
    </div>
    <div class="card-body">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <div class="mb-3">
          <%= f.input :content, input_html: { class: 'form-control' }, label_html: { class: 'form-label' } %>
        </div>
        <div class="mb-3">
          <%= f.input :rating, collection: 0..5, input_html: { class: 'form-select' }, label_html: { class: 'form-label' } %>
        </div>
        <div class="d-grid">
          <%= f.submit "Submit Review", class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>