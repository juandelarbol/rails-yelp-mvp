<div class="container">
    <div class="cards">
<% @restaurants.each do |restaurant| %>
    <div class="card" style="width: 18rem;">
    <div class="card-body">
    <h5 class="card-title"><%= restaurant.name %></h5>
    <h6 class="card-subtitle mb-2 text-body-secondary"><%= restaurant.category %></h6>
    <p class="card-text"><%= restaurant.address %></p>
    <a href="#" class="card-link"><%= link_to "Show this restaurant", restaurant %>
</a>
  </div>
</div>
<% end %>
<div class="card" style="width: 18rem;">
    <div class="card-body">
    <h5 class="card-title">Something not on the list ?</h5>
    <%= link_to "Create new", new_restaurant_path, class: "btn btn-primary"%>
    
</div>
</div>
</div>
</div>